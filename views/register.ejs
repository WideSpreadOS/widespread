      <div class="create-account">
        <div class="card-header">
            <h1><i class="fas fa-user-plus"></i> Register</h1>
        </div>    
          
          <form action="/users/register" method="POST">
            <div class="form-container">

            <div class="input-group">
              <div class="input-data">
  
                <label for="name"> First Name</label>
                <input
                type="name"
                id="fname"
                name="fname"
                class="input-control login-input"
                placeholder="Enter First Name"
                value="<%= typeof name != 'undefined' ? fname : '' %>"
                />
              </div>

            </div>
            <div class="input-group">
              <div class="input-data">
  
                <label for="name"> Last Name</label>
                <input
                type="name"
                id="lname"
                name="lname"
                class="input-control login-input"
                placeholder="Enter Last Name"
                value="<%= typeof name != 'undefined' ? lname : '' %>"
                />
              </div>

            </div>
            <div class="input-group">
              <div class="input-data">
  
                <label for="email">Email</label>
                <input
                type="email"
                id="email"
                name="email"
                class="input-control login-input"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>

            </div>
            <div class="input-group">
              <div class="input-data">
  
                <label for="password">Password</label>
                <input
                type="password"
                id="password"
                name="password"
                class="input-control login-input"
                placeholder="Create Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>

            </div>
            <div class="input-group">
              <div class="input-data">
  
                <label for="password2">Confirm Password</label>
                <input
                type="password"
                id="password2"
                name="password2"
                class="input-control login-input"
                placeholder="Confirm Password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
        </div>
    </div>
            <button type="submit"><i class="fas fa-sign-in-alt"></i></button>
          </form>
          <div class="login-link">
            <p class="lead mt-4">Have An Account? <a href="/users/login" style="color: lightskyblue; background: none; border: none;">Login</a></p>
          </div>
        </div>
    </div>