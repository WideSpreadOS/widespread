<style>
    .page-background {
        position: fixed;
        z-index: -10;
        top: 0;
        left: 0;
        min-width: 100vw;
        max-width: 100vw;
        min-height: 100vh;
    }
    .page-background img {
        min-width: 100%;
        max-width: 100vw;
        min-height: 100vh;
        opacity: 0.5;
    }
    .page-title {
        margin-top: 20px;
        width: 100%;
        min-width: 100%;
        background: rgba(0, 0, 0, 0.5);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 5px lightskyblue;
    }
    .page-title h2 {
        font-size: 2rem;
    }
    .page-title h3 {
        text-transform: capitalize;
        padding: 6px;
    }

    .add-course {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 30px;
    }
    .add-course a {
        padding: 20px;
        font-size: 1.5rem;
        color: #fff;
        text-decoration: none;
        margin: 0 auto;
        background: rgba(0, 0, 0, 0.5);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 5px lightskyblue;
        border-radius: 16px;
    
    }
    .toolbox-container {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.25), 0 0 2px #fff;
        width: 90%;
        margin: 0 auto;
        border-radius: 16px;
        padding: 8px;
        padding-bottom: 15px;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .toolbox-header {
        margin-bottom: 10px;
        text-align: center;
    }
    .toolbox-header h5 {
        font-size: 1.2rem;
    }
    .toolbox {
        width: 95%;
        margin: 0 auto;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
    }
    .toolbox-item-container {
        min-width: 50px;
        padding: 5px;
    }
    .toolbox-item {
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        border-radius: 6px;
        box-shadow: 0 0 6px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
        text-align: center;
    }
    .toolbox-item i {
        color: #fff;
        padding: 5px;
        font-size: 2rem;
    }



    .course-classes-header {
        margin: 0 auto;
        margin-top: 40px;
        margin-bottom: 30px;
        text-align: center;
        width: 100%;
        min-width: 100%;
        background: rgba(255, 255, 255, 0.25);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 5px lightskyblue;
    }
    .course-classes-header h3 {
        color: lightskyblue;
        font-size: 1.8rem;
        padding-top: 10px;
        padding-bottom: 10px;
    }


    .class-list {
        width: 90%;
        min-width: 90%;
        margin: 0 auto;
        background: rgba(0, 0, 0, 0.5);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 5px lightskyblue;
        border-radius: 16px;
    }
    .class-list ol {
        padding: 15px;
        margin-left: 20px;
        list-style: decimal;
    }
    .class-list > ol > li {
        color: lightskyblue;
        font-size: 1.5rem;

    }
    .class-list a {
        text-decoration: none;
        color: #fff;
    }
    .class-item {
        width: 95%;
        border-bottom: solid 1px rgba(135, 206, 250, 0.75);
        margin-bottom: 10px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }
    li:last-of-type > .class-item {
        border-bottom: none;
    }
    
    .class-header {
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-between;
    }
    .class-header h3 {
        font-size: 1.5rem;
        text-align: center;
        padding: 10px;
    }
    .class-link i {
        font-size: 1.3rem;
        color: lightskyblue;
    }
    .class-body {
        padding-left: 12px;
    }
    .class-body p {
        border-left: solid 1px rgba(255, 255, 255, 0.75);
        font-size: 1.1rem;
        color: #fff;
        padding: 8px;
        padding-left: 12px;
        margin-bottom: 15px;
        text-indent: 15px;
    }
</style>

<%- include('../../partials/menus/academy'); %>
<%- include('../../partials/menus/sub/academy/course', {classes: course.classes, course: course}); %>

<div class="page-background">
    <img src="/image/<%= course.background_image %>" alt="">
</div>

<div class="page-title">
    <h2>
        <%= course.course %>
    </h2>
    <h3>
        <%= course.subject %>
    </h3>
</div>

<% if (user=='undefined' ) { %>
    <a href="/users/login">Login to Add Class</a>
<% } else { %>


    <% for (var i=0; i < courses.length; i++) { %>
        <% if (courses[i].id == courseId) { %>
            <% for (var j=0; j < user.academy_info.current_courses.length; j++) { %>
                <% if (user.academy_info.current_courses[j].course == courses[i]) { %>
                    <span style="color: red; ">This course is already saved. <%= courseId %></span>
                <% } else { %>
                    <% var thisCourse = courses[i] %>
                    
                    <% } %>
            <% } %>
        <% } else {  %>
            <p style="color: red; display: none;"><%= courses[i] %></p>
        <% } %>
    <% } %>
<% } %>


<div class="add-course">
    <a href="/academy/course/<%= thisCourse.id %>/add">Add Course</a>
</div>





<div class="toolbox-container">
    <div class="toolbox-header">
        <h5>Course Tools</h5>
    </div>
    <div class="toolbox">
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-question-circle"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-hand-paper"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-code"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-folder"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-calculator"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-sticky-note"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-chalkboard-teacher"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-check"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-cogs"></i></p>
            </div>
        </div>

        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-file-code"></i></p>
            </div>
        </div>

        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-info"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-list"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-star"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fas fa-star-half-alt"></i></p>
            </div>
        </div>
        <div class="toolbox-item-container">
            <div class="toolbox-item">
                <p><i class="fab fa-wikipedia-w"></i></p>
            </div>
        </div>




    </div>
</div>

<div class="course-classes-header">
    <h3>Classes</h3>
</div>



<div class="class-list">
    <ol>
        <% course.classes.forEach(function(className) { %>
            <li>
                <div class="class-item">
                    <div class="class-header">
                        <div class="class-title">
                            <h3><%= className.name %></h3>
                        </div>
                        <div class="class-link">
                            <p><i style="color: rgba(255, 255, 255, 0.2); margin-right: 10px;" class="fas fa-check-circle"></i> <a href="/academy/course/<%= course.id %>/class/<%= className.id %>"><i class="fas fa-arrow-circle-right"></i></a></p>
                        </div>
                    </div>
                    <div class="class-body">
                        <p><%= className.description %></p>
                    </div>
                </div>
            </li>
        <% }) %>
    </ol>
</div>
