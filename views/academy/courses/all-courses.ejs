<style>
@media screen and (min-width: 299px) {
    .card-list {
        backdrop-filter: blur(4px);
        border-radius: 6px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        flex-wrap: wrap;
        padding-top: 10px;
        margin-top: 30px;
    }

    .card {
        background: rgba(255, 255, 255, 0.25);
        margin-bottom: 20px;
        position: relative;
        width: 100%;
        min-width: 300px;
        height: 300px;
        max-height: 300px;
        overflow: hidden;
        
    }
    .card-background {
        width: 100%;
        max-height: 300px;
        height: 300px;
        overflow: hidden;
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
    }
    .card-background img {
        min-width: 100%;
    }
    .card-data {
        position: relative;
        z-index: 2;
        width: 100%;
        height: 100%;
    }
    .card-data-header {
        background: rgba(135, 206, 250, 0.5);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(4px);
        margin-top: 10px;
        padding: 8px;
    }
    .card-data-header h4 {
        font-size: 1.3rem;
        text-align: center;
    }
    .card-data-header a {
        text-decoration: none;
        color: #fff;
    }
    .card-data-body {
        margin-top: 15px;
        background: rgba(135, 206, 250, 0.5);
        backdrop-filter: blur(4px);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        
    }
    .class-list {
        padding: 8px;
        width: 100%;
        min-height: 150px;
        max-height: 150px;
        
    }
    .class-list-item a {
        color: #fff;
        text-decoration: none;
        font-size: 1.2rem;
        padding-top: 12px;
    }
    .card-data-actions {
        background: rgba(135, 206, 250, 0.5);
        backdrop-filter: blur(4px);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);

    }

}
@media screen and (min-width: 762px) {

    .card-list {
        flex-direction: row;
    }
    .card {
        max-width: 300px;
        border-radius: 6px;
    }
}

@media screen and (min-width: 992px) {



}

</style>

<div class="page-title">
    <h2>All Classes</h2>
</div>

<%- include('../../partials/menus/academy'); %>

<div class="card-list">
    <% courses.forEach(function(course) { %>
        <div class="card">
            <div class="card-background">
                <% if (course.background_image) { %>
                <img src="/image/<%= course.background_image %>" alt="">
                <% } else { %>
                    <span style="display: none;"></span>
                <% } %>
            </div>
            <div class="card-data">
                <div class="card-data-header">
                    <h4><a href="/academy/course/<%= course.id %>"><%= course.course %></a></h4>
                </div>
                <div class="card-data-body">
                    <div class="class-list">
                        <% course.classes.forEach(function(classId) { %>
                            <div class="class-list-item">
                                <p><a href="/academy/course/<%= course.id %>/class/<%= classId.id %>"><%= classId.name %></a></p>
                            </div>
                        <% }) %>
                    </div>

                </div>
                <div class="card-data-actions">

                </div>
            </div>

        </div>
    <% }) %>
</div>