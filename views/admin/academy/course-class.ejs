<style>
    .class-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding-top: 30px;
        padding-bottom: 30px;
        background: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
        margin-bottom: 30px;
        border-radius: 16px;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
    }
    .class-section-header {
        margin-bottom: 10px;
    }
    .class-section-header h5 {
        font-size: 2rem;
    }

    .class-section form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding-top: 30px;
        padding-bottom: 30px;
        background: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
        margin-bottom: 30px;
        border-radius: 16px;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
    }
    .form-input {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: flex-start;
        justify-content: space-between;
        width: 90%;
        min-width: 90%;
        margin: 0 auto;
        margin-bottom: 15px;
    }
    .form-input label {
        color: #fff;
        max-width: 25%;
    }
    .form-input input {
        max-width: 75%;
        padding: 5px;
        border-radius: 6px;
        color: #fff;
        background: rgba(135, 206, 250, 0.25);
        outline: none;
        border: none;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.25), 0 0 5px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
    }
    .form-input textarea {
        resize: none;
        max-width: 75%;
        padding: 5px;
        border-radius: 6px;
        min-height: 200px;
        color: #fff;
        background: rgba(135, 206, 250, 0.25);
        outline: none;
        border: none;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.25), 0 0 5px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;

    }
    .class-section button {
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        border-radius: 6px;
        box-shadow: 0 0 6px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
        text-align: center;
        color: #fff;
        margin-top: 20px;
        padding: 10px;
        outline: none;
        border: none;
        font-size: 1.5rem;
    }
</style>

<div class="page-title">
    <h2>Edit Class</h2>
    <h2><%= className.name %></h2>
</div>

<div class="class-section">
    <div class="class-section-header">
        <h5>Learning Points</h5>
    </div>

    <form action="/admin/academy/course/<%= course.id %>/class/<%= className.id %>/add-learning-point" method="post">
        <div class="form-input">
            <label for="header">Section Header</label>
            <input type="text" name="section_header" placeholder="Learning Point Header" id="header" required>
        </div>
        <div class="form-input">
            <label for="body">Section Body</label>
            <textarea name="section_body" id="body" placeholder="Learning Point Body" required></textarea>
        </div>
        <div id="notesContainer" class="form-input">
            <label for="notes">Section Notes</label>
            <textarea name="section_notes" id="notes" placeholder="Learning Point Notes"></textarea>
        </div>
        <div class="form-input"
            ><label for="difficulty">Difficulty</label>
            <input type="number" name="difficulty" id="difficulty">
        </div>
        <button type="submit">Add Learning Point</button>
    </form>
</div>

<% learningPoints.forEach(function(learningPoint) { %>
    <p style="color: #fff; font-size: 1.2rem; padding: 10px;"><%= learningPoint %></p>
<% }) %>

