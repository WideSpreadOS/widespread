<style>
    .auto-scroller {
        z-index: 50000;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-content: right;
        position: fixed;
        top: 50%;
        right: 0;
        transform: translateY(-35%);
        box-shadow: 0 0 8px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
        border-top-left-radius: 8px;    
        border-bottom-left-radius: 8px;    
    }
    .auto-scroller button {
        background: rgba(135, 206, 250, 0.25);
        box-shadow: inset 0 0 8px rgba(255, 255, 255, 0.25);
        border: none;
        outline: none;
        color: #fff;
        text-shadow: 0 0 2px lightskyblue;
        height: 50px;
        width: 30px;
    }
    .auto-scroller button:first-of-type {
        border-top-left-radius: 8px;
    }
    .auto-scroller button:last-of-type {
        border-bottom-left-radius: 8px;
    }

    .full-page-slider-container {
        width: 90vw;
        margin: 0 auto;
        margin-bottom: 40px;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-evenly;

    }
        .full-page-slider {
            height: auto;
            width: 100%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-evenly;
            margin: 0;

        }
    .movie-container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: fit-content;
        margin-bottom: 20px;
        margin-right: 10px;
        border-radius: 6px;
    }
    .movie-container a {
        width: 120px;
        text-align: center;
        border-radius: 6px;
    }
    .movie-background {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .movie-background img {
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.5), 0 0 3px rgba(135, 206, 250, 0.75);
        max-height: 100%;
        height: 100%;
        width: 120px;
        border-radius: 8px;
    }

       
</style>

    <div class="auto-scroller">
        <button onclick="pageScrollUp()"><i class="fas fa-angle-double-up"></i></button>
        <button onclick="stopScroll()"><i class="fas fa-stop"></i></button>
        <button onclick="pageScroll()"><i class="fas fa-angle-double-down"></i></button>
    </div>

<%- include('../../partials/menus/entertainment'); %>

<%- include('../../partials/menus/sub/entertainment/tv'); %>

        <div class="sub-zone-page-title">
            <h2>
                <%= subZonePage %>
            </h2>
        </div>

<div class="spread-form">
    <form action="/entertainment/tv/search" method="POST">
        <div class="input-section">
            <div class="input-data">
                <input type="text" name="show" id="movie" placeholder="Search for shows...">
            </div>
            <button type="submit">Search Shows</button>
        </div>
    </form>
</div>

            <div class="spread-container-header">
                <h5>Popular Shows</h5>
            </div>
            <div class="full-page-slider-container">
                <% returnedData.forEach(function(show) { %>
                    <div class="movie-container">
                        <a href="/entertainment/tv/show/<%= show.id %>">
                            <div class="movie-background">
                                <img src="https://image.tmdb.org/t/p/w500<%= show.poster_path %>" alt="">
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>

            <div class="spread-container-header">
                <h5>Recommended Shows</h5>
            </div>
            <div class="full-page-slider-container">
                <% shows.forEach(function(show) { %>
                    <div class="movie-container">
                        <a href="/entertainment/tv/show/<%= show.link %>">
                            <div class="movie-background">
                                <img src="https://image.tmdb.org/t/p/w500<%= show.poster %>" alt="">
                            </div>
                        </a>
                    </div>
                    <% }) %>
            </div>



<script>
    function pageScroll() {
        window.scrollBy(0, 1);
        scrolldelay = setTimeout('pageScroll()', 20)
    }
    function pageScrollUp() {
        window.scrollBy(0, -1);
        scrolldelay = setTimeout('pageScrollUp()', 20)
    }

    function stopScroll() {
        clearTimeout(scrolldelay);
    }

</script>