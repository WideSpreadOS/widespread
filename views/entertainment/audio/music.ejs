<style>

    .music-list {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-evenly;
        padding: 20px;
        width: 90%;
        margin: 0 auto;
    }

    .song-card {
        border-radius: 10px;
        margin-bottom: 30px;
        background: rgba(0, 0, 0, 0.25);
        width: 400px;
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
    }
    .song-background {
        position: absolute;
        z-index: -10;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .song-header {
        padding: 8px;
        text-align: center;
        margin-bottom: 30px;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.4);

    }

    .song-header h5 {
        font-size: 1rem;
    }

    .song-header h2 {
        font-size: 1.5rem;
        padding: 8px;
    }

    .song-header h3 {
        font-size: 1.2rem;
        color: #ccc;
    }

    .song-header h6 {
        font-size: 0.9rem;
        text-transform: capitalize;
        padding: 4px;
    }

    .song-tags {
        color: lightskyblue;
        text-shadow: 0 0 2px #000;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-evenly;
        width: 100%;

    }

    .tags p {
        font-size: 1.3rem;
        color: #fff;
        display: block;
        text-align: center;
        width: 100%;
        padding: 5px;
    }

    .song-actions {
        padding: 8px;
        text-align: center;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        border-top: outset 1px rgba(255, 255, 255, 0.5);
    }
    .song-actions a {
        color: #fff;
        text-decoration: none;
        font-size: 1.2rem;
    }
    audio {
        width: 100%;
        min-width: 100%;
        margin-bottom: 15px;
        border-radius: 0;
    }
</style>
 
<div class="zone-title">
    <h1>
        <%= zone %>
    </h1>
</div>


<%- include('../../partials/menus/entertainment'); %>


    <div class="sub-zone-title">
        <h2>
            <%= subZone %>
        </h2>
    </div>

    <%- include('../../partials/menus/sub/entertainment/audio'); %>

        <div class="sub-zone-page-title">
            <h2>
                <%= subZonePage %>
            </h2>
        </div>



<div class="music-list">
    <% audioFiles.forEach(function(song) { %>
        <div class="song-card">
            <div class="song-background" style="background:url('<%= song.background_photo %>') 50% 50% no-repeat; background-size:cover;"></div>
            <div class="song-header">
                <h5>
                    <%= song.artist %>
                </h5>
                <h2>
                    <%= song.song %>
                </h2>
                <h3>
                    <%= song.album %>
                </h3>
                <h6>
                    <%= song.genre %>
                </h6>
                <div class="song-tags">
                    <% song.tags.forEach(function(tag) { %>
                        <div class="tag">
                            <span>
                                <%= tag %>
                            </span>
                        </div>
                        <% }) %>
                </div>
            </div>
            <audio controls loop>
                <source src="/audio/<%= song.img.data %>" type="audio/mp3">
                Your browser does not support the audio element.
            </audio>
            <div class="song-actions">
                <a href="/entertainment/audio/music/add-to-playlist">Add to Playlist</a>
            </div>
        </div>
        <% }) %>
</div>




<script>
    const uploadBtn = document.getElementById('upload-btn');

        const fileChosen = document.getElementById('file-chosen');

        uploadBtn.addEventListener('change', function () {
            fileChosen.textContent = this.files[0].name
        })
</script>
